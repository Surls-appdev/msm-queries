<h1>List of all movies</h1>

<hr>

<table border="1">
  <tr>
        <th>
          ID
        </th>

        <th>
          Image
        </th>

        <th>
          Title
        </th>

        <th>
          Year
        </th>
        <th>
          Director
        </th>
        <th>
        </th>
    </tr>

<% @list_of_movies.each do |a_block| %>
    <tr>
      <td>
        <%= a_block.id %>
      </td>
      <td>
        <img src="https://robohash.org/<%= a_block.title %>">
      </td>
      <td>
        <%= a_block.title %>
      </td>
      <td>
        <%= a_block.year %>
      </td>
      <td>
        <% d = Director.where({ :id => a_block.director_id}).at(0) %>
        <%= d.name %>
      </td>
     <td>
      <a href="/movies/<%= a_block.id %>">
        Show details
      </a>
     </td>
  </tr>
<% end %>
</table>
