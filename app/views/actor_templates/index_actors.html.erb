<h1>List of all actors</h1>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

<% @list_of_actors.each do |a_block| %>
    <tr>
      <td>
        <%= a_block.id %>
      </td>
      <td>
        <img src="https://robohash.org/<%= a_block.name %>">
      </td>
      <td>
        <%= a_block.name %>
      </td>
      <td>
        <%= a_block.dob %>
      </td>
     <td>
      <a href="/actors/<%= a_block.id %>">
        Show details
      </a>
     </td>
  </tr>
<% end %>
</table>
